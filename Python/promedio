print("Ingrese la cantidad de notas:")
cantidad = int(input())
total = 0
for n in range (1, cantidad+1):
    while True:
        print("Ingrese la calificaciÃ³n ",n,":")
        calificacion = int(input())
        if calificacion >= 0 and calificacion <= 100:
            total += calificacion
            break
promedio = total/cantidad
print("El promedio es de ",promedio," puntos.")